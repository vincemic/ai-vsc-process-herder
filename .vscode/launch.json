{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug MCP Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/build/index.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "vscode-process-herder"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "build project",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ]
    },
    {
      "name": "Debug MCP Server (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/src/index.ts",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "vscode-process-herder"
      },
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--loader",
        "tsx/esm"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Test Individual Tool",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/build/index.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "vscode-process-herder",
        "MCP_TEST_TOOL": "list-tasks"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "build project",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ]
    }
  ]
}