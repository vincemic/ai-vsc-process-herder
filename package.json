{
  "name": "vscode-process-herder-mcp",
  "version": "1.1.0",
  "description": "MCP server for VS Code process management - helps AI assistants manage development processes intelligently",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "vscode-process-herder": "./build/index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "mcp:run": "node build/index.js",
    "mcp:shell": "npx @modelcontextprotocol/cli shell --config mcp.json",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:mcp": "playwright test tests/mcp-server",
    "test:process": "playwright test tests/process-management",
    "test:integration": "playwright test tests/integration",
    "test:performance": "playwright test tests/performance",
    "test:cleanup": "tsx tests/cleanup.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vscode",
    "process-management",
    "development-tools",
    "ai-assistant",
    "github-copilot"
  ],
  "author": "VS Code Process Herder",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cross-spawn": "^7.0.3",
    "ps-list": "^8.1.1",
    "tree-kill": "^1.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "playwright": "^1.55.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "build",
    "src",
    "README.md",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pkg": {
    "scripts": [
      "build/**/*.js"
    ],
    "assets": [
      "package.json",
      "README.md"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-win-x64",
      "node20-macos-x64"
    ],
    "outputPath": "dist"
  }
}
